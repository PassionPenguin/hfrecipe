generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model CuisineType {
  publicId    String    @id(map: "cuisine_type_pk") @db.VarChar(12)
  title       String?   @db.VarChar(127)
  description String?
  createdAt   DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime? @default(now()) @db.Timestamptz(6)
  deletedAt   DateTime? @db.Timestamptz(6)
  Recipe      Recipe[]
}

model Ingredient {
  publicId      String    @id(map: "ingredients_pk") @db.VarChar(12)
  description   String
  expensiveness Int?
  createdAt     DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime? @default(now()) @db.Timestamptz(6)
  deletedAt     DateTime? @db.Timestamptz(6)
  title         String?   @db.VarChar(31)
}

model Recipe {
  publicId           String      @id(map: "recipes_pk") @db.VarChar(12)
  title              String      @db.VarChar(128)
  description        String?
  cuisineTypeId      String      @db.VarChar(12)
  cuisineType        CuisineType @relation(fields: [cuisineTypeId], references: [publicId])
  estimatedTime      String?     @db.VarChar(63)
  servingsMultiplier Int
  rating             Int?
  deliciousness      Int?
  ingredients        String?
  tools              String?
  difficulty         Int?
  steps              String?
  createdAt          DateTime?   @default(now()) @db.Timestamptz(6)
  updatedAt          DateTime?   @default(now()) @db.Timestamptz(6)
  deletedAt          DateTime?   @db.Timestamptz(6)
  odCover            String?     @db.VarChar(256)
  odVideo            String?     @db.VarChar(256)
  tips               String?
}

model Tool {
  publicId      String    @id(map: "tool_pk") @db.VarChar(12)
  description   String
  expensiveness Int?
  createdAt     DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime? @default(now()) @db.Timestamptz(6)
  deletedAt     DateTime? @db.Timestamptz(6)
  title         String?   @db.VarChar(31)
}
